@model LeedsSharp.NHib.Domain.Models.Entities.Person

<h2>Add a person</h2>

@using (Html.BeginForm("Add", "Person", FormMethod.Post, new { @class = "form-horizontal" }))
{
	<div class="form-group">
		@Html.LabelFor(x => x.FirstName, new { @class = "col-sm-3 control-label" })
		<div class="col-sm-4">
			@Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.LastName, new { @class = "col-sm-3 control-label" })
		<div class="col-sm-4">
			@Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.Address.Line1, new { @class = "col-sm-3 control-label" })
		<div class="col-sm-4">
			@Html.TextBoxFor(x => x.Address.Line1, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.Address.Line2, new { @class = "col-sm-3 control-label" })
		<div class="col-sm-4">
			@Html.TextBoxFor(x => x.Address.Line2, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.Address.TownCity, new { @class = "col-sm-3 control-label" })
		<div class="col-sm-4">
			@Html.TextBoxFor(x => x.Address.TownCity, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.Address.County, new { @class = "col-sm-3 control-label" })
		<div class="col-sm-4">
			@Html.TextBoxFor(x => x.Address.County, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(x => x.Address.PostCode, new { @class = "col-sm-3 control-label" })
		<div class="col-sm-4">
			@Html.TextBoxFor(x => x.Address.PostCode, new { @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-3 col-sm-4">
			<button type="submit" class="btn btn-default">Save</button>
		</div>
	</div>
}
